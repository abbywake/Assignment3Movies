@{
    ViewBag.Title = "Joel's list of Movies!";
}
@model IEnumerable<Assignment3Movies.Models.movie>
<div class="textColor">
    <h2>Here are the movies that are currently in his movie collection!</h2>
    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent to:</th><th>Notes</th></tr>
        </thead>

        <tbody>
            @foreach(Assignment3Movies.Models.movie x in Model)
            {
            <tr>
                <td>@x.Category</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.LentTo</td>
                <td>@x.Notes</td>
            </tr>
            }
        </tbody>
    </table>
</div>
